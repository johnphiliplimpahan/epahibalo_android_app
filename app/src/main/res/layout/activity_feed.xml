<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedActivityContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/holo_orange_light"
    tools:context=".Activities.FeedActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/postIncidentBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="21dp"
        android:backgroundTint="#8e24aa"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_menu_camera"
        android:theme="@style/Widget.Design.FloatingActionButton"
        app:elevation="5dp"
        app:layout_anchor="@+id/viewPager"
        app:layout_anchorGravity="right|bottom"
        app:rippleColor="@android:color/holo_purple"
        tools:ignore="RtlCompat" />


    <android.support.design.widget.TabLayout
        android:id="@+id/action_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:persistentDrawingCache="animation|all"
        android:splitMotionEvents="false"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@android:color/background_light"
        app:tabTextColor="@color/cardview_light_background">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_tabs"
        android:animateLayoutChanges="true">

    </android.support.v4.view.ViewPager>

</RelativeLayout>